generator client {
    provider = "prisma-kysely"
    output = "./"
    fileName = "types.ts"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
}

model Expense {
    id        String   @db.Uuid @default(dbgenerated("gen_random_uuid()")) @id
    amount    Decimal  @db.Decimal(8, 3)
    date      DateTime @db.Timestamptz()
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Account{
    id        String   @db.Uuid @default(dbgenerated("gen_random_uuid()")) @id
    name      String
    transactionsOut Transaction[]  @relation("Transaction_originAccount") 
    transactionsIn Transaction[]  @relation("Transaction_destinationAccount")
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Transaction {
    id              String   @db.Uuid @default(dbgenerated("gen_random_uuid()")) @id
    originId        String @db.Uuid
    origin          Account  @relation("Transaction_originAccount", fields: [originId], references: [id])
    destinationId   String @db.Uuid
    destination     Account  @relation("Transaction_destinationAccount",fields: [destinationId], references: [id]) 
    createdAt       DateTime @default(now())
    updatedAt       DateTime @default(now()) @updatedAt
}